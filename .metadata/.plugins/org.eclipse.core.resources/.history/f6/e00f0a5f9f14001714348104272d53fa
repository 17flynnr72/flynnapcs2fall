
package textExcel;
import java.util.*;
// Update this file with your own code.

public class Spreadsheet implements Grid
{	private Cell [][] FIIK =new Cell[this.getRows()][this.getCols()]; 
public Spreadsheet(){
	for (int i = 0;i<Cell.length;i++){
		for (int h = 0;h<Cell[i].length;h++)
			FIIK[i][h]= new EmptyCell();
	}
}
private static String[][] sheet;

private int rows = 20;
private int columns = 12;

@Override
public String processCommand(String command)
{command = command.trim();
if(command.equals(""))
	return command;
if (command.toUpperCase.equals("clear")){
	new Spreadsheet();
	String[] commandsplit = command.split(" ");
	if(command.contains("clear")){
		if(commandsplit[1].isEmpty() == false){
			SpreadsheetLocation loc = new SpreadsheetLocation(commandsplit[1]);
			FIIK[loc.getRow()][loc.getCol()]= new EmptyCell();
		}
	}
	return "";
}
}

@Override
public int getRows()
{
	return this.rows;
}

@Override
public int getCols()
{
	return this.columns;
}

@Override
public Cell getCell(Location loc)
{
	// TODO Auto-generated method stub
	return null;
}

@Override
public String getGridText()
{String gridtxt = "";
for(int i = 65;i < 77; i++){
	gridtxt = gridtxt+"|"+(char) i+"         ";
}
gridtxt=gridtxt + "|" + "\n";
for (int i=0;i<20;i++){
	if(i<9)
		gridtxt= gridtxt + (i+1) + "  |";
	else
		gridtxt= gridtxt + (i+1) + " |";
	for (int j=0; j<16;j++){
		gridtxt= gridtxt + FIIK [i][j].abbreviatedCellText()+ "|";
	}
}
return gridtxt;
}

}
